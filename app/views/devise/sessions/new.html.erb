<div class="skinny_wrapper">
  <h2>Login</h2>
  <p>Welcome back!</p> 
  <p>We look forward to hearing your thoughts and reactions to the beers that we are tasting.</p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "srt" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "srt" %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
    </div>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>