<div class="skinny_wrapper">
  <h2 class="center">Login</h2>
  <p class="center">Welcome back!</p> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), class: "fb-btn"  do%>
          <i class="fa fa-facebook-official"></i>
          <p>Login with Facebook</p>
        <% end %>
    <% end -%>
    <pre class="center">OR</pre>
    <% end -%>

    <div class="field">
      <%= f.label :email, class: "srt" %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "srt" %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
    </div>

    <div class="actions">
      <%= f.submit "Login" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>